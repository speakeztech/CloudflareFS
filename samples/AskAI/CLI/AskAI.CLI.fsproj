    <Compile Include="Commands/Deploy.fs" />
    <Compile Include="Commands/Sync.fs" />
    <Compile Include="Commands/Status.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argu" Version="6.2.5" />
  </ItemGroup>

