  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>AskAI_CLI</RootNamespace>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ask-ai-cli</ToolCommandName>
    <PackageId>AskAI.CLI</PackageId>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Core/Config.fs" />
    <Compile Include="Core/ContentSync.fs" />
